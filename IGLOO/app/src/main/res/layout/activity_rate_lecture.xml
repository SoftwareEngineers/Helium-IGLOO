<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/tutorial_background"
    tools:context=".LectureRateActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_marginStart="@dimen/twentyfive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

           <CheckBox
               android:onClick="CheckOutsdanding"
               android:id="@+id/rating_outstanding"
               android:layout_width="@dimen/thirty"
               android:layout_height="@dimen/thirty" />

            <TextView

                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_marginStart="@dimen/thirty"
                android:fontFamily="@font/montserrat"
                android:text="@string/label_rating_outstanding"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sixteen"

                />

            <RatingBar
                style="@style/customRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:layout_marginStart="@dimen/thirty"
                android:layout_marginEnd="@dimen/thirty"
                android:numStars="5"
                android:rating="5" />


        </LinearLayout>

    <LinearLayout
        android:layout_marginStart="@dimen/twentyfive"
        android:layout_marginTop="@dimen/twentyfive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:onClick="CheckVeryGood"
            android:id="@+id/rating_verygood"
            android:layout_width="@dimen/thirty"
            android:layout_height="@dimen/thirty" />

        <TextView
            android:layout_marginStart="@dimen/thirty"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sixteen"
            android:text="@string/label_rating_verygood"
            />

        <RatingBar
            style="@style/customRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/thirty"
            android:rating="4" />



    </LinearLayout>

    <LinearLayout
        android:layout_marginStart="@dimen/twentyfive"
        android:layout_marginTop="@dimen/twentyfive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:onClick="CheckAverage"
            android:id="@+id/rating_average"
            android:layout_width="@dimen/thirty"
            android:layout_height="@dimen/thirty" />

        <TextView
            android:layout_marginStart="@dimen/thirty"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sixteen"
            android:text="@string/label_rating_average"
            />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="3"
            style="@style/customRatingBar"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/thirty"/>


    </LinearLayout>

    <LinearLayout
        android:layout_marginStart="@dimen/twentyfive"
        android:layout_marginTop="@dimen/twentyfive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:onClick="CheckNotGood"
            android:id="@+id/rating_notgood"
            android:layout_width="@dimen/thirty"
            android:layout_height="@dimen/thirty" />
        <TextView
            android:layout_marginStart="@dimen/thirty"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sixteen"
            android:text="@string/label_rating_notgood"
            />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="2"
            style="@style/customRatingBar"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/thirty"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginStart="@dimen/twentyfive"
        android:layout_marginTop="@dimen/twentyfive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:onClick="CheckTerrible"
            android:id="@+id/rating_terrible"
            android:layout_width="@dimen/thirty"
            android:layout_height="@dimen/thirty" />
        <TextView
            android:layout_marginStart="@dimen/thirty"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sixteen"
            android:text="@string/label_rating_terrible"
            />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="1"
            style="@style/customRatingBar"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/thirty"/>
    </LinearLayout>



        <Button
            android:text="@string/button_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginTop="100dp"
            android:onClick="ExecuteRateLecture" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
