<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="passwordFields" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/lightGrey</item>
        <item name="android:textSize">@dimen/fourteen</item>
    </style>

    <style name="title" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/eighteen</item>
    </style>

    <style name="menuItem" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">@dimen/fourteen</item>
    </style>

    <style name="tabItem" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/lightGrey</item>
    </style>

    <style name="navigationTheme" parent="AppTheme">
        <item name="listPreferredItemHeightSmall">60dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="customRatingBar"
        parent="android:style/Widget.Material.RatingBar.Small">
    </style>

</resources>
